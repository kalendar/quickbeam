{# def textbook_ident, submission_text="Submit", module=None #}
<form
  action=""
  hx-ext="json-enc"
  {{ attrs.render(class="flex w-[65ch] gap-5 flex-col") }}>
  <div>
    <label for="name">Name
      <Tooltip>
        This is the name of the module. It will be shown to learners. 
      </Tooltip>

    </label>
    <br />
    <form.TextInput
      name="name"
      id="name"
      required
      :value="{{ module.name if module }}"
      placeholder="My Module" />
  </div>
  <input
    type="number"
    name="textbook_id"
    id="name"
    required
    hidden
    value="{{ textbook_ident }}" />
  <div>
    <label for="outcomes">Outcomes
      <Tooltip>
        List the knowledge and skills learners should develop when learning from this module.
        List one outcome per line. 
      </Tooltip>
    </label>
    <br />
    <form.TextArea
      name="outcomes"
      id="outcomes"
      required
      :text="module.outcomes if module else ''" />
  </div>
  <div>
    <label for="summary">Summary
      <Tooltip>
        Provide a detailed exposition of the knowledge and skills learners need to develop. 
        This should be similar to a detailed chapter summary and NOT an entire textbook chapter.
        If your work is based on an existing OER textbook chapter, you might consider using AI 
        to draft a summary. 
      </Tooltip>
</label>
    <br />
    <form.TextArea
      name="summary"
      id="summary"
      required
      :text="module.summary if module else ''" />
  </div>
  <input
    type="submit"
    value="{{ submission_text }}"
    class="rounded border-2 border-sky-500 bg-sky-600 px-2 py-1 text-white transition duration-100 hover:bg-sky-500" />
  <BackButton />
</form>
