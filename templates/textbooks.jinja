{% extends "base.jinja" %}

{% block title %}Generative Textbooks{% endblock %}

{% block body %}
  <div class="mx-auto w-[80%]">
    <div class="flex w-full items-center justify-between">
      <h1>Your Generative Textbooks</h1>
      <a
        href="{{ request.url_for('create_textbook_get') }}"
        class="rounded border-2 border-sky-700 bg-sky-700 px-2 py-1 items-center text-white transition duration-100 hover:bg-sky-600"
        >New Generative Textbook</a
      >
    </div>
    <br />
    <div class="grid-cols-adaptive gap-5">
      {% for textbook in textbooks %}
        <a
          href="{{ request.url_for('textbook_details', ident=textbook.id) }}"
          class="rounded-2xl bg-slate-100 p-5 transition-all duration-75 hover:scale-105">
          <h2>{{ textbook.title }}</h2>
          <hr />
          <p class="mt-5">Modules: {{ len(textbook.modules) }}</p>
          <p>Activities: {{ len(textbook.activities) }}</p>
        </a>
      {% endfor %}
    </div>
  </div>
{% endblock %}
